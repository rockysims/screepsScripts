{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "noEmitOnError": true,
    "noResolve": false,
    "experimentalDecorators": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedParameters": true, //change back to true?
    "noUnusedLocals": true, //change back to true?
    "sourceMap": true,
    "baseUrl": "./yith/src/"
  },
  "lib": [
    "es5",
    "es6",
    "es7",
    "esnext"
  ],
  "include": [
    "yith/src/**/*",
    "yith/typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}